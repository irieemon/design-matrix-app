{
  "name": "prioritas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "node -e \"if (process.getuid && process.getuid() === 0) { console.error('\\n❌ ERROR: Never run npm commands with sudo!\\n\\nThis causes massive file permission issues.\\nIf you see permission errors, fix the underlying issue instead.\\n'); process.exit(1); }\"",
    "dev": "vite",
    "prebuild": "node -e \"if (process.getuid && process.getuid() === 0) { console.error('\\n❌ ERROR: Never run npm commands with sudo!\\n'); process.exit(1); }\"",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:api": "vitest run api/",
    "test:components": "vitest run src/components/",
    "test:hooks": "vitest run src/hooks/",
    "test:lib": "vitest run src/lib/",
    "visual:test": "node tests/visual/run-visual-tests.js",
    "visual:test:auth": "node tests/visual/run-visual-tests.js --suites auth-flow",
    "visual:test:flicker": "node tests/visual/run-visual-tests.js --suites flickering",
    "visual:test:responsive": "node tests/visual/run-visual-tests.js --suites responsive",
    "visual:test:regression": "node tests/visual/run-visual-tests.js --suites regression",
    "visual:update": "UPDATE_BASELINES=true node tests/visual/run-visual-tests.js",
    "visual:debug": "HEADLESS=false VERBOSE=true node tests/visual/run-visual-tests.js",
    "playwright:install": "npx playwright install --with-deps",
    "matrix:validate": "node scripts/run-matrix-validation.js",
    "matrix:test": "npx playwright test tests/matrix/ --reporter=html",
    "matrix:performance": "npx playwright test tests/matrix/matrix-performance-benchmark.spec.ts --reporter=html",
    "matrix:visual": "npx playwright test tests/matrix/matrix-visual-regression.spec.ts --reporter=html",
    "validate:comprehensive": "node tests/run-comprehensive-validation.mjs",
    "validate:card-backgrounds": "npx playwright test tests/comprehensive-fix-validation.spec.ts --grep \"Card Background\" --reporter=html",
    "validate:double-click": "npx playwright test tests/double-click-functionality.spec.ts --reporter=html",
    "validate:performance": "npx playwright test tests/performance-stability.spec.ts --reporter=html",
    "validate:evidence": "npx playwright test tests/visual-evidence-system.spec.ts --reporter=html",
    "validate:all-fixes": "npm run validate:card-backgrounds && npm run validate:double-click && npm run validate:performance && npm run validate:evidence",
    "test:redesign": "npx playwright test tests/visual/card-redesign-validation.spec.ts --config playwright.redesign.config.ts --reporter=html",
    "test:redesign:ui": "npx playwright test tests/visual/card-redesign-validation.spec.ts --config playwright.redesign.config.ts --ui",
    "test:redesign:debug": "npx playwright test tests/visual/card-redesign-validation.spec.ts --config playwright.redesign.config.ts --debug",
    "e2e:all": "npx playwright test tests/e2e/ --config playwright.e2e.config.ts --reporter=html",
    "e2e:visual": "npx playwright test tests/e2e/visual-regression-comprehensive.spec.ts --config playwright.e2e.config.ts --reporter=html",
    "e2e:accessibility": "npx playwright test tests/e2e/accessibility-comprehensive.spec.ts --config playwright.e2e.config.ts --reporter=html",
    "e2e:visual:update": "npx playwright test tests/e2e/visual-regression-comprehensive.spec.ts --config playwright.e2e.config.ts --update-snapshots",
    "e2e:performance": "npx playwright test tests/e2e/performance-benchmarks-e2e.spec.ts --config playwright.e2e.config.ts --reporter=html",
    "e2e:cross-browser": "npx playwright test tests/e2e/cross-browser-compatibility.spec.ts --config playwright.e2e.config.ts --reporter=html",
    "e2e:chromium": "npx playwright test tests/e2e/ --config playwright.e2e.config.ts --project=chromium --reporter=html",
    "e2e:firefox": "npx playwright test tests/e2e/ --config playwright.e2e.config.ts --project=firefox --reporter=html",
    "e2e:webkit": "npx playwright test tests/e2e/ --config playwright.e2e.config.ts --project=webkit --reporter=html",
    "e2e:mobile": "npx playwright test tests/e2e/cross-browser-compatibility.spec.ts --config playwright.e2e.config.ts --project=mobile-chrome --project=mobile-safari --reporter=html",
    "e2e:core-vitals": "npx playwright test tests/e2e/performance-benchmarks-e2e.spec.ts --config playwright.e2e.config.ts --grep PWV --reporter=html",
    "e2e:network": "npx playwright test tests/e2e/performance-benchmarks-e2e.spec.ts --config playwright.e2e.config.ts --grep PNP --reporter=html",
    "e2e:ui": "npx playwright test tests/e2e/ --config playwright.e2e.config.ts --ui",
    "e2e:debug": "npx playwright test tests/e2e/ --config playwright.e2e.config.ts --debug",
    "e2e:report": "npx playwright show-report test-results/e2e-report",
    "test:e2e:auth": "npx playwright test tests/e2e/auth-*.spec.ts --reporter=html",
    "test:e2e:auth:journey": "npx playwright test tests/e2e/auth-complete-journey.spec.ts --reporter=html",
    "test:e2e:auth:security": "npx playwright test tests/e2e/auth-security.spec.ts --reporter=html",
    "test:e2e:auth:ui": "npx playwright test tests/e2e/auth-*.spec.ts --ui",
    "test:e2e:auth:debug": "npx playwright test tests/e2e/auth-*.spec.ts --debug",
    "test:e2e:auth:chromium": "npx playwright test tests/e2e/auth-*.spec.ts --project=chromium --reporter=html",
    "test:e2e:auth:mobile": "npx playwright test tests/e2e/auth-*.spec.ts --project='Mobile Chrome' --reporter=html",
    "test:functional": "playwright test --config=playwright.functional.config.ts",
    "test:functional:headed": "playwright test --config=playwright.functional.config.ts --headed",
    "test:functional:debug": "playwright test --config=playwright.functional.config.ts --debug",
    "test:performance": "playwright test --config=playwright.performance.config.ts",
    "test:performance:report": "playwright show-report test-results/performance-report",
    "test:visual": "playwright test --config=playwright.visual-regression.config.ts",
    "test:visual:update": "UPDATE_SNAPSHOTS=true playwright test --config=playwright.visual-regression.config.ts",
    "test:ci": "playwright test --config=playwright.ci.config.ts",
    "test:cross-browser": "playwright test --config=playwright.functional.config.ts --project=chromium --project=firefox --project=webkit",
    "test:list": "playwright test --config=playwright.functional.config.ts --list"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emailjs/browser": "^4.4.1",
    "@playwright/test": "^1.55.0",
    "@supabase/supabase-js": "^2.57.2",
    "@types/dompurify": "^3.0.5",
    "@types/html2canvas": "^0.5.35",
    "@types/validator": "^13.15.3",
    "@vercel/analytics": "^1.5.0",
    "dompurify": "^3.2.7",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.294.0",
    "pdfjs-dist": "^2.16.105",
    "pdfmake": "^0.2.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1",
    "uuid": "^9.0.1",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/pdfmake": "^0.2.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vercel/node": "^5.3.21",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^2.2.2",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "msw": "^2.11.2",
    "postcss": "^8.4.32",
    "puppeteer": "^24.22.1",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
